        <if test="auctionTask.bidTaskNum != 'null' and auctionTask.bidTaskNum !='' and auctionTask.bidTaskNum != null">
            AND Bid_Task_Num = #{auctionTask.bidTaskNum}
        </if>
        ORDER BY Service_Time DESC
